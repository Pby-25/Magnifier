{
  "manifest_version": 2,
  "name": "Magnifier Chrome Extension",
  "version": "0.0.1",
  "description": "a",
  "browser_action": {
    "default_icon": "magnifying_glass.png",
    "default_title": "Still testing"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "MacCtrl+Z"
      }
    }
  },
  "permissions" : [
    "activeTab",
    "storage"
  ]
}