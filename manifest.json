{
  "manifest_version": 2,
  "name": "Magnifying Glass",
  "version": "0.5.1",
  "description": "Summon a magnifying glass with the press of a button",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "512": "icon.png"
  },
  "browser_action": {
    "default_title": "Magnifying Glass"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "MacCtrl+Z"
      }
    }
  },
  "permissions" : [
    "activeTab",
    "storage"
  ]
}